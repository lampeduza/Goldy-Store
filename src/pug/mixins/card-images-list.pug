mixin card-images-list(card)
	ul.card__images
		each image in card.images
			li.card__image(class= image.current ? 'card__image--current' : '')
				.card__image-wrapper
					+picture(`${image.path}`, 'jpg', `${image.width}`, `${image.height}`, `${image.description}`, `${image.description}`)
					+dots(dots)(class="card__dots")